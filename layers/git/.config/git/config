[alias]
	commits-since = rev-list --count HEAD --since 
	contributors = shortlog -s -n --all --no-merges
	aliases = config --get-regexp ^alias
	push-set-upstream-to-remote-branch = ! git push --set-upstream origin "$(git branch --show-current)"
	psutrb = push-set-upstream-to-remote-branch
	ls = ls-files
	root = rev-parse --show-toplevel

	# The following commands shall use the following form
	# [lowercase head character in command or flag]*
        # [a]dd
        a = add
	ah = add --help

	aa = add --all
        ap = add --patch

        # [b]ranch
        b = branch
        bh = branch --help

	ba = branch --all
	bd = branch --delete
	br = branch --remote
	bm = branch --move

        # [c]ommit
        c = commit
        ch = commit --help

	cp = commit --patch
        ca = commit --amend
	cap = commit --amend --patch
        cm = commit --message
        cmp = commit --message -patch
        cam = commit --amend --message
        camp = commit --amend --message

        # [d]iff
        d = diff
        dh = diff --help

	dh = diff HEAD~
	dw = diff --word-diff
        ds = diff --staged
        dsw = diff --staged --word-diff

	# r[e]mote
	e = remote
	eh = remote --help

	eso = remote set-url origin
	rao = remote add origin

	# [f] - rebase
	f = rebase
	fh = rebase --help

	fa = rebase --autostash
	fe = rebase --edit-todo
	fi = rebase --interactive
	fia = rebase --interactive --autostash
	fir = rebase --interactive --root
	fira = rebase --interactive --root --autostash
	fc = rebase --continue
	fs = rebase --skip

	# [l]og
	l = log
	lh = log --help

	lp = log --patch
	lpf = log --patch --follow # View history of file including renames
	lgdo = log --graph --decorate --oneline

	# check[o]ut
	o = checkout
	oh = checkout --help

	ob = checkout -b
	oo = checkout --orphan # Creates branch with no parent commit

        # [p]ush
        p = push
        ph = push --help

	pf = push --force
	pd = push --delete # Used for deleting remote tags
        pot = push origin tag # "push origin" by itself also works, but this is more explicit
        pod = push origin --delete # Useful for deleting remote branches
	phm = push heroku master
	psom = push --set-upstream origin master

        # [r]estore
        r = restore
        rh = restore --help

	rp = restore --patch
        rs = restore --staged
        rsp = restore --staged --patch

        # [s]tatus
        s = status
        sh = status --help

        # [t]ag
        t = ! echo "This alias is disabled to facilitate getting used to the annotated tag workflow. Use tl for listing tags and ta, tam and tame for tagging."
        th = tag --help

	tl = tag --list
	td = tag --delete
	ta = tag --annotate
	tam = tag --annotate --message
	tame = tag --annotate --message '' # e for empty message

	# [i]nit
	i = init
	ih = init --help
[core]
	editor = vi
[include]
	path = alias
[push]
	followTags = true
[user]
	name = Olav Fosse
	email = fosseolav@gmail.com
