#!/bin/sh
# Download and play all OpenBSD release songs as of 2020-08-09
download() {
	if which ftp > /dev/null; then
		ftp "$1" # In OpenBSD base
	elif which wget > /dev/null; then
		wget -nc "$1" # In MacOS base
	fi
}

if [ "$1" = play ]; then
	find ~/Music/OpenBSD/ -name "*.ogg" -exec ffplay -nodisp -autoexit {} \;
elif [ "$1" = download ]; then
	mkdir -p ~/Music/OpenBSD
	cd ~/Music/OpenBSD


	# I did not find a way to download the songs with a one liner. If you know of a idiomatic way to do this please enlighten me. I tried using FTP(1) to no avail. It should in theory be pretty simple considering it is all in one flat directory though.
	i=30
	while [ $i -le 57 ]; do                                     # 30 -> 57
		download https://ftp.openbsd.org/pub/OpenBSD/songs/song$i.ogg
		i=$((i + 1))
	done
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song38b.ogg # 38 b -> b
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song58a.ogg # 58 a -> d
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song58b.ogg
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song58c.ogg
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song58d.ogg
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song59a.ogg # 59 a -> b
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song59b.ogg
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song60a.ogg # 60 a -> g
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song60b.ogg
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song60c.ogg
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song60d.ogg
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song60e.ogg
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song60f.ogg
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song60g.ogg
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song61.ogg  # 61
	download https://ftp.openbsd.org/pub/OpenBSD/songs/song62.ogg  # 62
	download https://ftp.openbsd.org/pub/OpenBSD/songs/songsh.ogg  # sh
	download https://ftp.openbsd.org/pub/OpenBSD/songs/songsi.ogg  # si
	download https://ftp.openbsd.org/pub/OpenBSD/songs/songty.ogg  # ty
else
	echo 'usage: songs download'
	echo '       songs play'
fi
